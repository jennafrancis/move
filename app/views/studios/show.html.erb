<h1><%= @studio.name %> - <%= link_to current_city.name, root_path %></h1>
<h2><%= @studio.street_address %></h2>
<% if current_user %>
<%= link_to "Leave a review", new_review_path %> | <%= link_to "Add a class", new_studio_group_class_path(@studio) %>
<% end %>

<br>

<% if @studio.group_classes.first %>
  <% @studio.group_classes.each do |gc| %>
    <h4><%= link_to gc.name, studio_group_class_path(@studio, gc) %> | <%= gc.duration %> minutes</h4>
    <%= gc.list_categories %> |
    <% if gc.reviews.best_review %>
    <%= gc.average_rating %>/5 Average | <%= pluralize(gc.reviews.count, "Review") %><br></br>
      <%= gc.reviews.best_review.rating %>/5 "<%= gc.reviews.best_review.content %>" <br>
      - <%= gc.reviews.best_review.user.email %><br></br>
      <% else %>
      There are no reviews for this class yet!
    <% end %>
  <% end %>
<% else %>
    This studio doesn't have any classes listed yet. Be the first to add a class and leave a review!
<% end %>
