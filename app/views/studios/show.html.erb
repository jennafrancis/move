<h1><%= @studio.name %> - <%= @studio.city.name %></h1>
<h2><%= @studio.street_address %></h2>
<%= link_to "Leave a review", new_review_path %>

<br>

<% @studio.group_classes.each do |gc| %>
  <h4><%= link_to gc.name, group_class_path(gc) %> | <%= gc.duration %> minutes</h4>
  <%= gc.list_categories %><br></br>
  <!-- method to pull top 2 reviews -->
  <%= gc.reviews.first.rating %>/5 "<%= gc.reviews.first.content %>" <br>
  - <%= gc.reviews.first.user.email %><br></br>
<% end %>
